
//CACULATOR
#include<stdio.h>
#include<conio.h>
main()
{
    int a;
    float b,c,d;
    choice:
    printf("Enter your choice \n");
    printf("1. Addition \n");
    printf("2. Subtraction \n");
    printf("3. Multiplication \n");
    printf("4. Division \n");
    printf("5. for exit\n");
    scanf("%d",&a);
    printf("Enter the number ");
    scanf("%f%f",&b,&c);
    switch(a)
    {
        case 1: d=b+c;
        printf("%-0.2f + %-0.2f =%-50.2f\n",b,c,d);
        break;
        case 2:d=b-c;
        printf("%-0.2f -%-0.2f =%-50.2f \n",b,c,d);
        break;
        case 3:d=b*c;
        printf("%0.2f multiplied by %0.2f =%-50.2f \n",b,c,d);
        break;
        case 4:d=b/c;
        printf("%0.2f divided by %0.2f =%-50.2f \n",b,c,d);
        break;
        case 5: goto exit;
        break;
        default:printf("choose the correct option");
    }

    goto choice;

    exit:
    return 0;
}
